<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Personne</title>
</head>
<body>
    <div style="width: 100%; display: flex; justify-content: space-between; align-items: center;padding-bottom: 20px;">
        <h1>Liste de personne</h1>
        <a href="{{ path('app_personne_create') }}">nouveau</a>
    </div>

    <table>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Aresse</th>
                <th>telephone</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for p in personne %}
                <tr>
                    <td>{{ p.nom }}</td>
                    <td>{{ p.prenom }}</td>
                    <td>{{ p.adresse }}</td>
                    <td>{{ p.telephone }}</td>
                    <td>
                        <a href="{{ path('app_personne_update', {'id': p.id}) }}">modifier</a>
                        <a href="{{ path('app_personne_delete', {'id': p.id}) }}">supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" style="text-align: center;">Aucun enregistrement</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</body>
</html>
